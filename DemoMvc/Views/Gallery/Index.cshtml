@model IEnumerable<GalleryViewModel>
@{
    ViewData["Title"] = "Index";
    
}




<h1>All Gallery</h1>
<br />
<br />
<a class="btn btn-primary" asp-action="Create">Create Gallery</a>
<br />
<br />

@if (Model.Count()>0)

{
    <div class="container">
        <div class="row">
            @foreach (var item in Model.OrderByDescending(e=>e.Id))
            {
                <div class="col-md-4">
                    <div class="card" style="width: 18rem;">
                        <img src="~/File/image/@item.ImageName" class="w-100" />
                        <div class="card-body">
                            <p><span class="bg-light rounded p-1">HairArtist : </span>@Html.DisplayFor(e=>item.HairArtist.name)</p>
                            <p class="card-text">@item.Decsription</p>
                            <a  class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
       
    </div>
}
else
{
    <div class="mt-4 alert alert-warning"><h1>No Gallery ......</h1></div>
}

