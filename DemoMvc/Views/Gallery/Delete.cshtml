@model GalleryViewModel;

@inject IUnitOfWork unite
@{
    var department = new SelectList(await unite.HairArtist.GetAll(), "Id", "name");
}

@{
    ViewData["Title"] = "Delete";
  
}

<h1>Delete</h1>





<div class="container">
    <form asp-action="Delete" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-form-label" asp-for="Decsription"></label>
            <input class="form-control" readonly asp-for="Decsription" />

        </div>
        <div class="form-group">
            <label class="col-form-label">HairArtist</label>
            <select class="form-control" asp-for=HairArtistId asp-items="@department">
                <option value="@null">---Select HairArtist----</option>
            </select>
        </div>
        <div class="form-group">
            <img src="~/File/image/@Model.ImageName" class="w-50" />
        </div>
        <input class="btn btn-outline-danger" type="submit" value="Delete" />
        <a class="btn btn-outline-primary" asp-action="Index">Back To Home</a>
    </form>
</div>

