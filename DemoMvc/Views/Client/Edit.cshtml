@model ClientViewModel
@inject IUnitOfWork unite
@{
    var department = new SelectList(await unite.HairArtist.GetAll(), "Id", "name");
}
@{
    ViewData["Title"] = "Edit";
   
}

<h1>Edit</h1>





<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label class="col-form-label" asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" />
            <p class="text-danger"> @Html.ValidationMessageFor(e=>e.Name)</p>
        </div>
        <div class="form-group">
            <label class="col-form-label">HairArtist</label>
            <select class="form-control" asp-for=HairArtistId asp-items="@department">
                <option value="@null">---Select HairArtist----</option>
            </select>
            <p class="text-danger"> @Html.ValidationMessageFor(e=>e.HairArtistId)</p>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Image">Image</label>
            <input class="form-control" asp-for="Image" />
        </div>
        <input class="btn btn-outline-primary" value="Save Changes" type="submit" />
    </form>
</div>

