@model IEnumerable<ClientViewModel>

@{
    ViewData["Title"] = "Index";
  
}



<h1>All Clients</h1>
<br />
<br />
<a class="btn btn-primary" asp-action="Create">Create Client</a>
<br />
<br />
@if (Model.Count() > 0)

{
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D=>D.Image)</td>
                <td>@Html.DisplayNameFor(D=>D.Name)</td>
              

                <td>Update</td>
                <td>Delete</td>
                <td>Details</td>
            </tr>


        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>


                    <td>   <img src="~/File/image/@item.ImageName" class="img-fluid rounded-circle w-25" /></td>

                    <td>@item.Name</td>
                    

                    <td><a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                    <td><a class="btn btn-outline-danger" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                </tr>

            }
        </tbody>

    </table>
}
else
{
    <div class="mt-4 alert alert-warning"><h1>No Clients ......</h1></div>
}


